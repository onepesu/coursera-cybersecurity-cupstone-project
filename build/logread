#!/usr/bin/env python3
import sys
import logparser
import validators

full_arguments = sys.argv

if len(full_arguments) < 3:
    print('invalid')
    sys.exit(255)

mapping = {
    '-K': {'name': 'token', 'max_args': 1},
    '-S': {'name': 'status', 'is_flag': True},
    '-R': {'name': 'room_id', 'is_flag': True},
    '-T': {'name': 'total_time', 'is_flag': True},
    '-I': {'name': 'rooms', 'is_flag': True},
    '-E': {'name': 'employee'},
    '-G': {'name': 'guest'}
}

log_file = full_arguments[-1]
try:
    arguments = logparser.parse_args(full_arguments[1:-1], mapping)
    validators.logread_argument_validator(arguments, log_file)
except logparser.ValidationError as exc:
    print(exc)
    print('invalid')
    sys.exit(255)

print(arguments)
